<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bakiye</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body style="background-color:bisque">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:blanchedalmond;border-radius:25vh">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bakiye", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul style="background-color:bisque;font-family:Arial, Helvetica, sans-serif;border-radius:10vh;font-size:medium;" class="nav navbar-nav">
                    <li>@Html.ActionLink("Kasa Bilgileri", "Index", "Kasa")</li>
                    <li>@Html.ActionLink("Banka Bilgileri", "Index", "Banka")</li>
                    <li>@Html.ActionLink("Kasa Bakiye Bilgileri", "Index", "Bakiye_Kasa")</li>
                    <li>@Html.ActionLink("Banka Bakiye Bilgileri", "Index", "Bakiye_Banka")</li>
                    <li>@Html.ActionLink("Ödeme Bilgileri", "Index", "TAHSILAT_ODEME")</li>
                    <li>@Html.ActionLink("Yeni Hareket İşlemi", "Index", "Yeni_Hareket_Islem")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tüm haklar Yağmur Yakut aittir.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
