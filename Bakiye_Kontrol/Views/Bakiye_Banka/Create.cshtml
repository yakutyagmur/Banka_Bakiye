@model Bakiye_Kontrol.Models.Entity.Bakiye_Banka

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:x-large ;color:brown">Banka Bakiyesi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BankaID, "Banka Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BankaID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BankaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            @Html.LabelFor(model => model.ParaBirimi,"Para Birimi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @Html.DropDownList("ParaBirimi",
              new List<SelectListItem> {
                  new SelectListItem {
                     Text="TL",
                     Value="TL",

                  },
                  new SelectListItem {
                     Text="EUR",
                     Value="EUR",

                  },
                  new SelectListItem
                  {
                      Text="USD",
                      Value="USD",
                  },
                  new SelectListItem
                  {
                      Text="GBP",
                      Value="GBP"
                  }

              }, "Para Birimi Seçimi", new { @class = "form-control" })
                
                @Html.ValidationMessageFor(model => model.ParaBirimi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bakiye,"Bakiye", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bakiye, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bakiye, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="EKLE" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VAZGEÇ", "Index",null,new { id="OT",@class="btn btn-danger"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
