@model IEnumerable<Bakiye_Kontrol.Models.Entity.TAHSILAT_ODEME>

@{
    ViewBag.Title = "Index";
}
<div style="background-color:azure" class="container">
    <h2 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #3c3b8b">Tahsilat</h2>
    <table style="background-color:khaki;border-radius:4.2vh" class="table table-hover" class="table">
        <thead>
            <tr>
                <th style="text-align:center">
                    İşlem Tipi
                </th>
                <th>
                    İşlem Numarası
                </th>
                <th>
                    İşlem Tarihi
                </th>
                <th>
                    Açıklama
                </th>
                <th>
                    Para Birimi
                </th>
                <th>
                    Tutar
                </th>
                <th>
                    Banka Adı
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kasa.KasaAdi)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @{
                            string tip = "";
                            if (item.IslemTipi == "T")
                            {
                                tip = "Nakit Tahsilat";
                            }
                            else if (item.IslemTipi == "G")
                            {
                                tip = "Gelen Havale";
                            }
                            else if (item.IslemTipi == "H")
                            {
                                tip = "Giden Havale";
                            }
                            else
                            {
                                tip = "Nakit Ödeme";
                            }
                        }
                        @tip
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.IslemNo)
                    </td>
                    <td>
                        @*@item.IslemTarih.ToShortDateString();*@
                        @Html.DisplayFor(modelItem => item.IslemTarih)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklama)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.ParaBirimi)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Tutar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Banka.BankaAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kasa.KasaAdi)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <p>
        @Html.ActionLink("Ekle", "Create", null, new { id = "OT", style = "color:white", @class = "btn btn-success" })
    </p>
</div>
